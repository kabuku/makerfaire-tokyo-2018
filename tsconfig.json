{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "importHelpers": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "downlevelIteration": true,
    "lib": [
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}
